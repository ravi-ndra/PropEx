<h1>Admin</h1>

<table class="table table-hover" border=1 cellspacing=1 cellpadding=5 >
  <thead>
    <tr >
      <strong><th scope="col">Role</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <th scope="row"><%= link_to image_tag("#{user.role}.png"), alt: "user role image"%></th>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
